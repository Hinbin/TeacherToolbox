<local:AutomatedPage
    x:Class="TeacherToolbox.Controls.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TeacherToolbox.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Spacing between cards  -->
        <x:Double x:Key="SettingsCardSpacing">4</x:Double>

        <!--  Style (inc. the correct spacing) of a section header  -->
        <Style
            x:Key="SettingsSectionHeaderTextBlockStyle"
            BasedOn="{StaticResource BodyStrongTextBlockStyle}"
            TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin" Value="1,30,0,6" />
            </Style.Setters>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Margin="24,24,24,24" Spacing="8">
            <!--  Page Header  -->
            <TextBlock
                Margin="0,24,0,0"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Settings" />

            <!--  Feedback section  -->
            <local:ExpanderItem Header="Feedback" Subheader="Report bugs and suggest improvements by clicking on this button">
                <local:ExpanderItem.ItemContent>
                    <StackPanel Spacing="8">
                        <Button
                            x:Name="FeedbackButton"
                            Click="FeedbackButton_Click"
                            Content="Send Feedback" />
                    </StackPanel>
                </local:ExpanderItem.ItemContent>
            </local:ExpanderItem>

            <!--  Timer Section  -->
            <TextBlock
                Margin="0,24,0,0"
                Style="{StaticResource SubtitleTextBlockStyle}"
                Text="Timer" />

            <!--  Settings Card  -->
            <StackPanel
                Margin="0,8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4">

                <!--  Timer sound Setting  -->
                <local:ExpanderItem Header="Timer sound" Subheader="Select the sound when the timer is finished">
                    <local:ExpanderItem.ItemContent>
                        <ComboBox
                            x:Name="TimerSoundComboBox"
                            MinWidth="120"
                            SelectionChanged="TimerSound_SelectionChanged">
                            <ComboBoxItem Content="Default" />
                            <ComboBoxItem Content="Chime" />
                            <ComboBoxItem Content="Buzz" />
                            <ComboBoxItem Content="Horn" />
                        </ComboBox>
                    </local:ExpanderItem.ItemContent>
                </local:ExpanderItem>
                <local:ExpanderItem Header="Test Timer Sound" Subheader="Press the button to test the sound when the timer is finished">
                    <local:ExpanderItem.ItemContent>
                        <Button
                            x:Name="TimerSoundButton"
                            Margin="0,24,0,0"
                            Click="TimerSoundButton_Clicked"
                            Content="Test Sound" />
                    </local:ExpanderItem.ItemContent>
                </local:ExpanderItem>

                <Border Height="1" Background="{ThemeResource CardStrokeColorDefaultBrush}" />
            </StackPanel>

            <!--  Appearance Section  -->
            <TextBlock
                Margin="0,24,0,0"
                Style="{StaticResource SubtitleTextBlockStyle}"
                Text="Appearance" />

            <!--  Settings Card  -->
            <StackPanel
                Margin="0,8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4">

                <!--  App Theme Setting  -->
                <local:ExpanderItem Header="App theme" Subheader="Select which app theme to display">
                    <local:ExpanderItem.ItemContent>
                        <ComboBox
                            x:Name="ThemeComboBox"
                            MinWidth="120"
                            SelectionChanged="ThemeComboBox_SelectionChanged">
                            <ComboBoxItem Content="Use system setting" />
                            <ComboBoxItem Content="Light" />
                            <ComboBoxItem Content="Dark" />
                        </ComboBox>
                    </local:ExpanderItem.ItemContent>
                </local:ExpanderItem>

                <Border Height="1" Background="{ThemeResource CardStrokeColorDefaultBrush}" />

            </StackPanel>
            <!--  About Section  -->
            <TextBlock
                Margin="0,24,0,0"
                Style="{StaticResource SubtitleTextBlockStyle}"
                Text="About" />

            <StackPanel
                Margin="0,8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4">

                <local:ExpanderItem Header="Teacher Toolbox">
                    <local:ExpanderItem.ItemContent>
                        <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="Version 0.2" />
                    </local:ExpanderItem.ItemContent>
                </local:ExpanderItem>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</local:AutomatedPage>