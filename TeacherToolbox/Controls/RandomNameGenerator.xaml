<?xml version="1.0" encoding="utf-8" ?>
<local:AutomatedPage
    x:Class="TeacherToolbox.Controls.RandomNameGenerator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TeacherToolbox.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="RandomNameGeneratorControl"
    AutomationProperties.AutomationId="RandomNameGenerator"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid Name="RandomNameGeneratorPage">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" Tapped="NameDisplay_Tapped">
            <TextBlock
                x:Name="NameDisplay"
                Margin="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </Viewbox>
        <Viewbox Grid.Row="1">
            <ScrollViewer
                Name="ClassesViewer"
                VerticalAlignment="Bottom"
                HorizontalScrollBarVisibility="Auto">
                <StackPanel
                    x:Name="ClassList"
                    Margin="5"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal"
                    Spacing="5">
                    <Button
                        x:Name="AddClassButton"
                        Click="Add_Class_Clicked"
                        Content="Add Class" />
                </StackPanel>
            </ScrollViewer>
        </Viewbox>
    </Grid>
</local:AutomatedPage>
